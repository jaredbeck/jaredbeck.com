source 'http://rubygems.org'

gem 'rails'
gem 'jquery-rails'
gem 'haml'
gem 'slim'
gem 'bluecloth' # markdown
gem 'devise'
gem 'pg'
gem 'thin'

group :development do
  gem 'guard'
  gem 'guard-rspec'
  gem 'guard-spork'
  gem 'spork', '~> 1.0rc'
  gem 'rb-fsevent', '~> 0.9.1'
end

group :development, :test do
  gem 'factory_girl'
  gem 'rspec-rails'
  gem 'haml-rails'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end
