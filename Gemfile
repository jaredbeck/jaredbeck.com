source 'http://rubygems.org'

gem 'rails'
gem 'jquery-rails'
gem 'haml'
gem 'slim'
gem 'bluecloth' # markdown
gem 'devise'
gem 'pg'
gem 'thin'

group :development, :test do
  gem 'haml-rails'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

group :test do
  # Pretty printed test output
  gem 'turn', :require => false
end
